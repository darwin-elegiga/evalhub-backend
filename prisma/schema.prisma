generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String?  @map("first_name")
  lastName  String?  @map("last_name")
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  refreshTokens RefreshToken[]
  authEvents    AuthEvent[]
  students      Student[]
  groups        Group[]
  subjects      Subject[]
  topics        Topic[]
  questions     Question[]
  exams         Exam[]

  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  isRevoked Boolean  @default(false) @map("is_revoked")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

model AuthEvent {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  eventType String   @map("event_type")
  metadata  Json?
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([eventType])
  @@map("auth_events")
}

model Student {
  id        String   @id @default(uuid())
  teacherId String   @map("teacher_id")
  fullName  String   @map("full_name")
  email     String
  year      String?
  career    String?
  createdAt DateTime @default(now()) @map("created_at")

  teacher     User             @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  groups      StudentGroup[]
  assignments ExamAssignment[]

  @@unique([teacherId, email])
  @@index([teacherId])
  @@map("students")
}

model Group {
  id        String   @id @default(uuid())
  teacherId String   @map("teacher_id")
  name      String
  year      String
  career    String
  createdAt DateTime @default(now()) @map("created_at")

  teacher  User          @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  students StudentGroup[]

  @@unique([teacherId, name, year])
  @@index([teacherId])
  @@map("groups")
}

model StudentGroup {
  id        String   @id @default(uuid())
  studentId String   @map("student_id")
  groupId   String   @map("group_id")
  createdAt DateTime @default(now()) @map("created_at")

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  group   Group   @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([studentId, groupId])
  @@index([studentId])
  @@index([groupId])
  @@map("student_groups")
}

model Career {
  id        String   @id @default(uuid())
  name      String   @unique
  code      String?  @unique
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("careers")
}

model Subject {
  id          String   @id @default(uuid())
  teacherId   String   @map("teacher_id")
  name        String
  description String?
  color       String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  teacher   User       @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  topics    Topic[]
  questions Question[]

  @@unique([teacherId, name])
  @@index([teacherId])
  @@map("subjects")
}

model Topic {
  id          String   @id @default(uuid())
  teacherId   String   @map("teacher_id")
  subjectId   String   @map("subject_id")
  name        String
  description String?
  color       String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  teacher   User       @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  subject   Subject    @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  questions Question[]

  @@unique([teacherId, subjectId, name])
  @@index([teacherId])
  @@index([subjectId])
  @@map("topics")
}

enum QuestionType {
  multiple_choice
  numeric
  graph_click
  open_text
}

enum Difficulty {
  easy
  medium
  hard
}

model Question {
  id                   String       @id @default(uuid())
  teacherId            String       @map("teacher_id")
  subjectId            String?      @map("subject_id")
  topicId              String?      @map("topic_id")
  title                String
  content              String
  questionType         QuestionType @map("question_type")
  typeConfig           Json         @map("type_config")
  difficulty           Difficulty   @default(medium)
  estimatedTimeMinutes Int?         @map("estimated_time_minutes")
  tags                 String[]     @default([])
  weight               Int          @default(1)
  timesUsed            Int          @default(0) @map("times_used")
  averageScore         Float?       @map("average_score")
  createdAt            DateTime     @default(now()) @map("created_at")
  updatedAt            DateTime     @updatedAt @map("updated_at")

  teacher       User           @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  subject       Subject?       @relation(fields: [subjectId], references: [id], onDelete: SetNull)
  topic         Topic?         @relation(fields: [topicId], references: [id], onDelete: SetNull)
  examQuestions ExamQuestion[]

  @@index([teacherId])
  @@index([subjectId])
  @@index([topicId])
  @@index([questionType])
  @@index([difficulty])
  @@map("questions")
}

// ============================================
// EXAMS
// ============================================

model Exam {
  id              String   @id @default(uuid())
  teacherId       String   @map("teacher_id")
  subjectId       String?  @map("subject_id")
  title           String
  description     String?
  durationMinutes Int?     @map("duration_minutes")
  config          Json     @default("{}")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  teacher   User           @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  questions ExamQuestion[]
  assignments ExamAssignment[]

  @@index([teacherId])
  @@index([subjectId])
  @@map("exams")
}

model ExamQuestion {
  id            String   @id @default(uuid())
  examId        String   @map("exam_id")
  questionId    String   @map("question_id")
  questionOrder Int      @map("question_order")
  weight        Int      @default(1)
  createdAt     DateTime @default(now()) @map("created_at")

  exam     Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([examId, questionId])
  @@unique([examId, questionOrder])
  @@index([examId])
  @@index([questionId])
  @@map("exam_questions")
}

model ExamAssignment {
  id         String    @id @default(uuid())
  examId     String    @map("exam_id")
  studentId  String    @map("student_id")
  magicToken String    @unique @map("magic_token")
  assignedAt DateTime  @default(now()) @map("assigned_at")
  startedAt  DateTime? @map("started_at")
  finishedAt DateTime? @map("finished_at")
  score      Float?

  exam    Exam    @relation(fields: [examId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([examId, studentId])
  @@index([examId])
  @@index([studentId])
  @@index([magicToken])
  @@map("exam_assignments")
}
